<div class="ui grid">
  <div class="two wide column">
    <h4>Current Users</h4>
  </div>
  <div class="two wide column">
    <button {{action "addUser"}}>Add New User</button>
  </div>
</div>
<table class="ui celled table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Address</th>
      <th>Profile Image</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |user|}}
      <tr>
        <td>{{user.firstName}}</td>
        <td>{{user.lastName}}</td>
        <td>{{user.email}}</td>
        <td><img src={{user.photoUrl}} /></td>
        <td class="center aligned"><button {{action "editUser" user.id}}>Edit</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

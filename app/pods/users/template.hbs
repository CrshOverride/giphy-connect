<div class="ui main text container">
  <div class="ui stackable grid container">
    <div class="row">
      <div class="eight wide column">
        <h1 class="ui header">Current Users</h1>
      </div>
      <div class="eight wide column floated right aligned">
        <div class="ui green button" {{action "addUser"}}>
          <i class="add user icon" />
          Add New User
        </div>
      </div>
    </div>
  </div>
  <table class="ui green table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Profile Image</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |user|}}
        <tr>
          <td>{{user.firstName}}</td>
          <td>{{user.lastName}}</td>
          <td>{{user.email}}</td>
          <td class="center aligned"><img src={{user.photoUrl}} /></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<i class="close icon" />
<div class="header">
  Add Users to Group
</div>
<div class="content">
  <form class="ui form">
    <div class="field">
      {{#ui-dropdown class="search fluid multiple selection" selected=users onChange=(action (mut users)) as |execute mapper|}}
        <div class="default text">Select Users</div>
        <i class="dropdown icon" />
        <div class="menu">
          {{#each allUsers as |user|}}
            <div class="item" data-value="{{map-value mapper user}}">
              <img src="{{user.photoUrl}}" class="ui avatar image" />
              {{user.fullName}}
            </div>
          {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
  </form>
  <p>
    Selected Users
  </p>
</div>
<div class="actions">
  <div class="ui red deny button" {{action "cancel"}}>
    Cancel
  </div>
  <div class="ui positive right labeled icon button" {{action "save"}}>
    Save
    <i class="checkmark icon" />
  </div>
</div>